<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:elevation="2dp"
                android:background="@drawable/salepage_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_acticity"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_back"/>
                <TextView
                    android:id="@+id/title_address"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"/>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/like_button"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_favorite_border_24"
                    android:clickable="true"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/sliderViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/sliderViewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="60px"
                        android:textStyle="bold"
                        android:text="주소등록"
                        />
                    <TextView
                        android:id="@+id/home_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="집주소"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세정보"/>



            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/deposit"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전세"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/month_rent"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월세"/>
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_marginRight="60px"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="3dp"
                        android:height="60px"
                        android:textSize="40px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="집주인 동의 여부"/>
                    <Switch
                        android:layout_gravity="center"
                        android:id="@+id/owner_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:showText="true"
                        android:textOff="비동의"
                        android:textOn="동의"
                        android:thumb="@drawable/custom_thumb"
                        android:track="@drawable/custom_track" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:background="@drawable/salepage_edittextborder"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_weight="1"
                        android:width="100dp"
                        android:background="@null"
                        android:id="@+id/deposit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="보증금"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만원"/>
                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="0dp"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:background="@drawable/salepage_edittextborder"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:width="100dp"
                        android:background="@null"
                        android:id="@+id/month_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="월세"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만원"/>
                </LinearLayout>





            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="입주 가능 기간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/live_period_start"
                        android:layout_marginStart="5dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="입주 원하는 날" />


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:id="@+id/day_first"
                        android:src="@drawable/calendar" />


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="~"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/live_period_end"
                        android:layout_marginStart="5dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="마지막날"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:id="@+id/day_last"
                        android:src="@drawable/calendar"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="20dp"
                    android:text="방 내부사진"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/pre_picture_shape"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/salepage_pictureborder"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/post_gallery"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:layout_margin="10dp"
                        android:background="@drawable/picture"
                        />
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진 올리기"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photo_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft= "20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="관리비"/>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"

                android:padding="5dp"
                android:background="@drawable/salepage_edittextborder"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">


                <TextView

                    android:background="@null"
                    android:id="@+id/maintenance_cost"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="관리비"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout

                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/elec_cost"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전기세"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/gas_cost"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가스"/>
                </LinearLayout>

                <LinearLayout

                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/water_cost"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수도"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/internet_cost"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인터넷"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="면적"/>

            <LinearLayout
                android:layout_marginLeft="25dp"
                android:padding="5dp"
                android:background="@drawable/salepage_edittextborder"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:background="@null"
                    android:id="@+id/room_size"

                    android:layout_height="wrap_content"
                    android:hint="면적"/>



                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="㎡"/>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="층"/>

                    <LinearLayout
                        android:background="@drawable/maptest_round_corner"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/floor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="층"/>



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구조"/>

                    <LinearLayout
                        android:background="@drawable/maptest_round_corner"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/structure"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="층"/>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="옵션"/>


            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/elec_boiler"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전기보일러" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/salepage_inputborder"
                    android:id="@+id/gas_boiler"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가스보일러"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/salepage_inputborder"
                    android:id="@+id/induction"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인덕션"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/aircon"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="에어컨"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/salepage_inputborder"
                    android:id="@+id/washer"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세탁기"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/salepage_inputborder"
                    android:id="@+id/refrigerator"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">

                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="냉장고"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/closet"
                    android:background="@drawable/salepage_inputborder"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="옷장" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/salepage_inputborder"
                    android:id="@+id/gasrange"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가스레인지" />
                </LinearLayout>

