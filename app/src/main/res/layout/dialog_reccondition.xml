<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/salepage_inputborder"
    tools:context=".MainActivity">


<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

       android:padding="20dp"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="조건 설정"/>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <LinearLayout
            android:id="@+id/deposit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/salepage_inputborder"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="전세"
                android:textColor="@color/selector_textpress" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/month_rent"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:background="@drawable/salepage_inputborder"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="월세"
                android:textColor="@color/selector_textpress" />
        </LinearLayout>





    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
       android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sale_purchase_white_round6"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">



        <EditText
            android:inputType="number"
            android:layout_height="match_parent"
            android:id="@+id/deposit_price_max"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="보증금 최대 가격 설정"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="만원"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/month_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월세 범위 설정"/>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/month_price_min"
                    android:layout_marginLeft="5dp"
                    android:layout_width="90dp"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="13sp"
                    android:hint="월세 최소"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="~"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/month_price_max"
                    android:layout_marginLeft="5dp"
                    android:layout_width="90dp"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="13sp"
                    android:hint="월세 최대"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_margin="15dp"
        android:layout_marginLeft="28dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하는 입주 기간"/>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/sale_purchase_white_round6"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/live_period_start"
                android:layout_marginLeft="5dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="13sp"
                android:hint="입주 원하는 날" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:id="@+id/day_first"
                android:src="@drawable/calendar"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="~"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:padding="10dp"
            android:background="@drawable/sale_purchase_white_round6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/live_period_end"
                android:layout_marginLeft="5dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="13sp"
                android:hint="마지막날"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:id="@+id/day_last"
                android:src="@drawable/calendar"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="15dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리비"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/maintenance_cost"
                    android:layout_marginLeft="5dp"
                    android:layout_width="90dp"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="13sp"
                    android:hint="관리비 최대 가격"/>
                <TextView
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="구조"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal"
                android:padding="5dp">

                <Spinner
                    android:id="@+id/structure"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/structure_array2" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <TextView
        android:layout_margin="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="면적"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/sale_purchase_white_round6"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/room_size_min"
                android:hint="최소 면적"
                android:layout_marginLeft="5dp"
                android:layout_width="115dp"
                android:inputType="number"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="13sp"
             />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="~"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:background="@drawable/sale_purchase_white_round6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/room_size_max"
                android:hint="최대 면적"
                android:layout_marginLeft="5dp"
                android:layout_width="115dp"
                android:inputType="number"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="13sp"
              />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"/>
</LinearLayout>


</LinearLayout>