<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/to_SalePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매글쓰기"></Button>
    <Button
        android:id="@+id/to_PurchasePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매글쓰기"></Button>

    <Button
        android:id="@+id/to_MapTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도보기"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_toChatting"
        android:background="@drawable/ic_baseline_chat_bubble_24"
        android:text="채팅기능"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_log_out"
        android:text="LOG OUT"></Button>

    <Button
        android:id="@+id/to_SaleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매글 리스트"></Button>
    <Button
        android:id="@+id/to_PurchaseList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매글 리스트"></Button>
    <Button
        android:id="@+id/to_RecommendePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 매물"></Button>


</LinearLayout>