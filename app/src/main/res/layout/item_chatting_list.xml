<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recco_white_round15"
    android:padding="4dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:backgroundTint="#EEF3FC"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_chattingList_username"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="채팅 작성자"/>

            <TextView
                android:id="@+id/tv_chattingList_chattingname"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:gravity="center_vertical"
                android:maxWidth="200dp"
                android:text="채팅방 제목"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_chatting_list"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            app:cardBackgroundColor="#FF0000"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center"
            android:layout_marginRight="20sp"
            >

            <TextView
                android:id="@+id/tv_chattingList_unread"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="6"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:paddingBottom="5sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>