<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pages.PurchaseProductPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/addresssearch"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="동네"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:id="@+id/home_address"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6"/>
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="조건 설정"/>
            <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/deposit"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/text_deposit"
                        android:text="전세"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/month_rent"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:layout_marginStart="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월세"
                        android:id="@+id/text_month_rent"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/negotiable"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:layout_marginStart="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="협상가능"
                        android:id="@+id/text_negotiable"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="34dp"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:hint="보증금 최대 가격 설정"
                    android:textSize="13sp"
                    android:id="@+id/deposit_price_max"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="만원"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월세 범위 설정"/>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/month_price_min"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:background="@null"
                        android:hint="최소 월세"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="만원"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="~"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="28dp"
                    android:padding="10dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/month_price_max"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="최대 월세"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="만원"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하는 입주 기간"/>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/live_period_start"
                        android:layout_marginStart="5dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="입주 원하는 날" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:src="@drawable/calendar"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="~"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/live_period_end"
                        android:layout_marginStart="5dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="마지막날"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:src="@drawable/calendar"/>

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6"/>

            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리비"/>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maintenance_cost"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="13sp"
                    android:hint="관리비 최대 가격"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="만원"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/elec_cost"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="78dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/text_elec_cost"
                        android:text="전기세"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/gas_cost"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="78dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/text_gas_cost"
                        android:text="가스"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/water_cost"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="78dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/text_water_cost"
                        android:text="수도"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/internet_cost"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="78dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/text_internet_cost"
                        android:text="인터넷"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면적"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/room_size_min"
                        android:layout_marginStart="5dp"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="최소 면적"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="㎡"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="~"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:padding="10dp"
                    android:background="@drawable/sale_purchase_white_round6"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/room_size_max"
                        android:layout_marginStart="5dp"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="13sp"
                        android:hint="최대 면적"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="㎡"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구조"/>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/sale_purchase_white_round6"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/structure"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginStart="28dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션"/>
            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                />


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/elec_boiler"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_elec_boiler"
                        android:text="전기보일러" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gas_boiler"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_gas_boiler"
                        android:text="가스보일러"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/induction"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_induction"
                        android:text="인덕션"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/aircon"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_aircon"
                        android:text="에어컨"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/washer"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_washer"
                        android:text="세탁기"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/refrigerator"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_refrigerator"
                        android:text="냉장고"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/closet"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_closet"
                        android:text="옷장" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gasrange"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/selector_textpress"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:id="@+id/text_gasrange"
                        android:text="가스레인지" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/highlight"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_highlight"
                        android:text="하이라이트" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/convenience_store"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_convenience_store"
                        android:text="편세권"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/subway"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
                        android:textColor="@color/selector_textpress"
                        android:id="@+id/text_subway"
                        android:text="역세권"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/parking"
                    android:gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/sale_purchase_white_round15"
                    android:layout_width="90dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:duplicateParentState="true"
