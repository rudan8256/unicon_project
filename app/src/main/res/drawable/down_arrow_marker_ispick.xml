<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:pivotX="135%"
            android:pivotY="13%"
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle" >

                <solid  android:color="#4945E3"/>
                <stroke
                    android:width="2dp"
                    android:color="#4945E3" /> //선색
                <padding
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"
                    android:bottom="0dp"/>
            </shape>
        </rotate>

    </item>


</layer-list>